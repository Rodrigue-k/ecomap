  @override
  Widget build(BuildContext context) {
    final state = ref.watch(mapControllerProvider);
    final wasteDumpsAsync = ref.watch(wasteDumpsProvider);

    // Configuration de la barre d'état et de navigation
    SystemChrome.setSystemUIOverlayStyle(const SystemUiOverlayStyle(
      statusBarColor: Colors.transparent,
      statusBarIconBrightness: Brightness.dark,
      systemNavigationBarColor: Colors.transparent,
      systemNavigationBarDividerColor: Colors.transparent,
      systemNavigationBarIconBrightness: Brightness.dark,
    ));

    // Mettre à jour les marqueurs lorsque les données changent
    wasteDumpsAsync.whenData((dumps) {
      if (_currentZoom > 14) {
        _updateMarkers(dumps);
      } else {
        _updateMarkers([]);
      }
    });

    return Scaffold(
      backgroundColor: Colors.transparent,
      body: Container(
        decoration: const BoxDecoration(
          gradient: LinearGradient(
            begin: Alignment.topCenter,
            end: Alignment.bottomCenter,
            colors: [Colors.white, Color(0xFFF5F5F5)],
          ),
        ),
        child: Stack(
          children: [
            // Carte OpenStreetMap
            FlutterMap(
              mapController: _mapController ??= MapController(),
              options: MapOptions(
                initialCenter: _currentPosition ?? _defaultLocation,
                initialZoom: _currentZoom,
                onPositionChanged: (position, hasGesture) {
                  if (hasGesture) {
                    setState(() {
                      _currentZoom = position.zoom!;
                    });
                  }
                },
                onTap: (tapPosition, point) {
                  // Gérer le tap sur la carte
                  wasteDumpsAsync.whenData((dumps) {
                    for (final dump in dumps) {
                      final distance = _calculateDistance(
                        point.latitude,
                        point.longitude,
                        dump.latitude,
                        dump.longitude,
                      );

                      // Si le clic est à moins de 50 mètres d'un point
                      if (distance < 50) {
                        _showWasteDumpDetails(dump);
                        return;
                      }
                    }
                  });
                },
              ),
              children: [
                // Couche de tuiles OpenStreetMap
                TileLayer(
                  urlTemplate: 'https://tile.openstreetmap.org/{z}/{x}/{y}.png',
                  userAgentPackageName: 'com.example.ecomap',
                ),
                
                // Marqueurs
                MarkerLayer(
                  markers: _markers,
                ),
                
                // Contrôles de la carte
                Align(
                  alignment: Alignment.bottomRight,
                  child: Padding(
                    padding: const EdgeInsets.all(16.0),
                    child: Column(
                      mainAxisSize: MainAxisSize.min,
                      children: [
                        // Bouton de zoom avant
                        FloatingActionButton.small(
                          heroTag: 'zoom_in',
                          onPressed: () {
                            _mapController?.move(
                              _mapController!.camera.center,
                              _mapController!.camera.zoom + 1,
                            );
                            setState(() {
                              _currentZoom = _mapController!.camera.zoom + 1;
                            });
                          },
                          child: const Icon(Icons.add),
                        ),
                        const SizedBox(height: 8),
                        // Bouton de zoom arrière
                        FloatingActionButton.small(
                          heroTag: 'zoom_out',
                          onPressed: () {
                            _mapController?.move(
                              _mapController!.camera.center,
                              _mapController!.camera.zoom - 1,
                            );
                            setState(() {
                              _currentZoom = _mapController!.camera.zoom - 1;
                            });
                          },
                          child: const Icon(Icons.remove),
                        ),
                      ],
                    ),
                  ),
                ),
              ],
            )
          ],
          // Afficher les marqueurs uniquement à un certain niveau de zoom
          markers: wasteDumpsAsync.when(
            data: (dumps) => _currentZoom > 14 ? _getMarkers(dumps) : {},
            loading: () => {},
            error: (_, __) => {},
          ),
          onCameraMove: (position) {
            // Mettre à jour le niveau de zoom actuel
            if (mounted) {
              setState(() {
                _currentZoom = position.zoom;
              });
            }
          },
          onTap: (latLng) {
            // Vérifier si un point de la heatmap a été touché
            wasteDumpsAsync.whenData((dumps) {
              for (final dump in dumps) {
                final distance = Geolocator.distanceBetween(
                  latLng.latitude,
                  latLng.longitude,
                  dump.latitude,
                  dump.longitude,
                );

                // Si le clic est à moins de 50 mètres d'un point de la heatmap
                if (distance < 50) {
                  _showWasteDumpDetails(dump);
                  return;
                }
              }
            });
          },
          heatmaps: wasteDumpsAsync.when(
            data: (dumps) {
              return {
                gmaps.Heatmap(
                  heatmapId: const gmaps.HeatmapId('waste_dumps_heatmap'),
                  data: dumps.map((dump) => gmaps.WeightedLatLng(
                    gmaps.LatLng(dump.latitude, dump.longitude),
                  )).toList(),
                  // Ajuster dynamiquement la taille du rayon en fonction du zoom
                  radius: gmaps.HeatmapRadius.fromPixels(
                    // Taille de base à zoom 15
                    // Ajustement progressif en fonction du zoom
                    // Minimum 10, maximum 100
                    (50 / (1 + (_currentZoom - 15).abs())).round().clamp(10, 100),
                  ),
                  opacity: 0.7,
                ),
              };
            },
            loading: () => {},
            error: (_, __) => {},
          ),
        ),

        // Barre de recherche en forme de gélule
        Positioned(
          top: MediaQuery.of(context).padding.top + 10,
          left: 16,
          right: 16,
          child: Container(
            decoration: BoxDecoration(
              color: Colors.white,
              borderRadius: BorderRadius.circular(50), // Coins plus arrondis pour la forme de gélule
              boxShadow: [
                BoxShadow(
                  color: Colors.black.withOpacity(0.1),
                  blurRadius: 15,
                  spreadRadius: 1,
                  offset: const Offset(0, 3),
                ),
              ],
              border: Border.all(
                color: Colors.grey.shade200,
                width: 1,
              ),
            ),
            child: Row(
              children: [
                const SizedBox(width: 16),
                const Icon(Icons.search, color: Colors.grey, size: 22),
                const SizedBox(width: 8),
                Expanded(
                  child: TextField(
                    decoration: const InputDecoration(
                      hintText: 'Rechercher un lieu...',
                      border: InputBorder.none,
                      contentPadding: EdgeInsets.symmetric(vertical: 16),
                      isDense: true,
                    ),
                    style: const TextStyle(fontSize: 15),
                    onChanged: (value) {
                      // TODO: Implémenter la recherche en temps réel
                    },
                  ),
                ),
                Container(
                  height: 30,
                  width: 1,
                  color: Colors.grey.shade300,
                  margin: const EdgeInsets.symmetric(horizontal: 8),
                ),
                IconButton(
                  icon: const Icon(Icons.tune_rounded, color: Colors.grey, size: 22),
                  padding: EdgeInsets.zero,
                  constraints: const BoxConstraints(),
                  onPressed: () {
                    // TODO: Implémenter les filtres de recherche
                  },
                ),
                const SizedBox(width: 8),
              ],
            ),
          ),
        ),

        // Bouton de recentrage
        Positioned(
          bottom: 100,
          right: 16,
          child: FloatingActionButton(
            heroTag: 'location_button',
            onPressed: _goToCurrentLocation,
            backgroundColor: Colors.white,
            child: const Icon(Icons.my_location, color: Colors.black87),
          ),
        ),

        // Indicateur de chargement
        if (state.status == MapStatus.loading)
          const Center(child: CircularProgressIndicator()),
      ],
    ),),);
  }
