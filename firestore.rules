rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Collection des poubelles - lecture publique, écriture authentifiée
    match /waste_bins/{document} {
      allow read: if true; // Lecture publique pour tous
      allow create: if request.auth != null && 
                     request.resource.data.createdBy == request.auth.uid;
      allow update: if request.auth != null && 
                     resource.data.createdBy == request.auth.uid;
      allow delete: if request.auth != null && 
                     resource.data.createdBy == request.auth.uid;
    }
    
    // Collection des utilisateurs - accès limité à l'utilisateur lui-même
    match /users/{userId} {
      allow read, write: if request.auth != null && 
                          request.auth.uid == userId;
    }
    
    // Règles par défaut - refuser tout accès non explicitement autorisé
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
